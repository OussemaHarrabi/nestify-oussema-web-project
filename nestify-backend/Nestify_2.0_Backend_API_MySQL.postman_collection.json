{
  "info": {
    "_postman_id": "nestify-2.0-backend-mysql-collection",
    "name": "Nestify 2.0 Backend API (MySQL)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for all main Nestify 2.0 backend API endpoints (MySQL version). Includes authentication, property CRUD, favorites, and user management."
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/register", "host": [ "{{base_url}}" ], "path": [ "api", "register" ] }
      },
      "response": []
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if(jsonData.token){ pm.environment.set('token', jsonData.token); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/login", "host": [ "{{base_url}}" ], "path": [ "api", "login" ] }
      },
      "response": []
    },
    {
      "name": "Get Properties",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/properties", "host": [ "{{base_url}}" ], "path": [ "api", "properties" ] }
      },
      "response": []
    },
    {
      "name": "Show Property",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/properties/:id", "host": [ "{{base_url}}" ], "path": [ "api", "properties", ":id" ] }
      },
      "response": []
    },
    {
      "name": "Create Property",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test Property\",\n  \"price\": 100000,\n  \"city\": \"Paris\",\n  \"property_type\": \"apartment\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/properties", "host": [ "{{base_url}}" ], "path": [ "api", "properties" ] }
      },
      "response": []
    },
    {
      "name": "Update Property",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 120000\n}"
        },
        "url": { "raw": "{{base_url}}/api/properties/:id", "host": [ "{{base_url}}" ], "path": [ "api", "properties", ":id" ] }
      },
      "response": []
    },
    {
      "name": "Delete Property",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/properties/:id", "host": [ "{{base_url}}" ], "path": [ "api", "properties", ":id" ] }
      },
      "response": []
    },
    {
      "name": "My Properties",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/my-properties", "host": [ "{{base_url}}" ], "path": [ "api", "my-properties" ] }
      },
      "response": []
    },
    {
      "name": "Get Filter Options",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/properties/filters/options", "host": [ "{{base_url}}" ], "path": [ "api", "properties", "filters", "options" ] }
      },
      "response": []
    },
    {
      "name": "Get Statistics",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/properties/statistics/overview", "host": [ "{{base_url}}" ], "path": [ "api", "properties", "statistics", "overview" ] }
      },
      "response": []
    },
    {
      "name": "Search Suggestions",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/properties/search/suggestions?query=paris", "host": [ "{{base_url}}" ], "path": [ "api", "properties", "search", "suggestions" ], "query": [ { "key": "query", "value": "paris" } ] }
      },
      "response": []
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/logout", "host": [ "{{base_url}}" ], "path": [ "api", "logout" ] }
      },
      "response": []
    },
    {
      "name": "Get User Info",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/user", "host": [ "{{base_url}}" ], "path": [ "api", "user" ] }
      },
      "response": []
    },
    {
      "name": "Favorites List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/favorites", "host": [ "{{base_url}}" ], "path": [ "api", "favorites" ] }
      },
      "response": []
    },
    {
      "name": "Toggle Favorite",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/favorites/:property", "host": [ "{{base_url}}" ], "path": [ "api", "favorites", ":property" ] }
      },
      "response": []
    },
    {
      "name": "Check Favorite",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/favorites/check/:property", "host": [ "{{base_url}}" ], "path": [ "api", "favorites", "check", ":property" ] }
      },
      "response": []
    }
  ],
  "event": [],
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "token", "value": "" }
  ]
}
